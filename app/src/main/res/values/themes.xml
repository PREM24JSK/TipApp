<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TipApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="radioButtonStyle">@style/Widget.TipTime.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Widget.TipTime.CompoundButton.Switch</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.TipAPP.TextView" parent="Base.Theme.TipApp">
    <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:minWidth">@dimen/min_text_width</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:textAppearance">?attr/textAppearanceBody1</item>
</style>
    <style name="Widget.TipTime.CompoundButton.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:minWidth">@dimen/min_text_width</item>
        <item name="android:maxWidth">@dimen/max_text_width</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="Widget.TipTime.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
    <style name="Theme.TipApp" parent="Base.Theme.TipApp" />
</resources>